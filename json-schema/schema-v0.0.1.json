{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://stac-extensions.github.io/pc4d/v1.0.0/schema.json#",
  "title": "PC4D Extension",
  "description": "STAC extension for multi-temporal point clouds metadata.",
  "oneOf": [
    {
      "$comment": "This is the schema for STAC Items. Remove this object if this extension only applies to Collections.",
      "allOf": [
        {
          "$ref": "#/definitions/stac_extensions"
        },
        {
          "type": "object",
          "required": [
            "type",
            "properties",
            "assets"
          ],
          "properties": {
            "type": {
              "const": "Feature"
            },
            "properties": {
              "allOf": [
                {
                  "$comment": "Require fields here for Item Properties.",
                  "required": [
                    "pc4d:native_crs",
                    "pc4d:datetime",
                    "pc4d:data_type"
                  ]
                },
                {
                  "$ref": "#/definitions/fields"
                }
              ]
            },
            "assets": {
              "$comment": "This validates the fields in Item Assets, but does not require them.",
              "type": "object",
              "additionalProperties": {
                "$ref": "#/definitions/fields"
              }
            }
          }
        }
      ]
    },
    {
      "$comment": "This is the schema for STAC Collections.",
      "type": "object",
      "allOf": [
        {
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "const": "Collection"
            }
          }
        },
        {
          "$ref": "#/definitions/stac_extensions"
        }
      ],
      "anyOf": [
        {
          "$comment": "This is the schema for the top-level fields in a Collection. Remove this if this extension does not define top-level fields for Collections.",
          "allOf": [
            {
              "$comment": "Require fields here for Collections (top-level).",
              "required": [
                "template:new_field"
              ]
            },
            {
              "$ref": "#/definitions/fields"
            }
          ]
        },
        {
          "$comment": "This validates the fields in Collection Assets, but does not require them.",
          "required": [
            "assets"
          ],
          "properties": {
            "assets": {
              "type": "object",
              "not": {
                "additionalProperties": {
                  "not": {
                    "allOf": [
                      {
                        "$ref": "#/definitions/require_any_field"
                      },
                      {
                        "$ref": "#/definitions/fields"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        {
          "$comment": "This is the schema for the fields in Item Asset Definitions. It doesn't require any fields.",
          "required": [
            "item_assets"
          ],
          "properties": {
            "item_assets": {
              "type": "object",
              "not": {
                "additionalProperties": {
                  "not": {
                    "allOf": [
                      {
                        "$ref": "#/definitions/require_any_field"
                      },
                      {
                        "$ref": "#/definitions/fields"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        {
          "$comment": "This is the schema for the fields in Summaries. By default, only checks the existence of the properties, but not the schema of the summaries.",
          "required": [
            "summaries"
          ],
          "properties": {
            "summaries": {
              "type": "object",
              "properties": {
                "num_items": {
                  "type": "integer",
                  "minimum": 0
                },
                "timestamp_list": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "date-time"
                  }
                },
                "temporal_resolution": {
                  "type": "string"
                },
                "attribute_list": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "additionalProperties": false
            }
          }
        }
      ]
    }
  ],
  "definitions": {
    "stac_extensions": {
      "type": "object",
      "required": [
        "stac_extensions"
      ],
      "properties": {
        "stac_extensions": {
          "type": "array",
          "contains": {
            "const": "https://stac-extensions.github.io/pc4d/v1.0.0/schema.json"
          }
        }
      }
    },
    "require_any_field": {
      "$comment": "Please list all fields here so that we can force the existence of one of them in other parts of the schemas.",
      "anyOf": [
        {
          "required": [
            "pc4d:native_crs"
          ]
        },
        {
          "required": [
            "pc4d:datetime"
          ]
        },
        {
          "required": [
            "pc4d:data_type"
          ]
        }
      ]
    },
    "trafometa": {
      "type": "object",
      "properties": {
        "reference_epoch": {
          "type": "string",
          "format": "uri"
        },
        "registration_error": {
          "type": "number",
          "minimum": 0
        },
        "affine_transformation": {
          "$ref": "#/definitions/transform_matrix"
        },
        "rotation": {
          "$ref": "#/definitions/transform_matrix"
        },
        "translation": {
          "$ref": "#/definitions/xyz"
        },
        "reduction_point": {
          "$ref": "#/definitions/xyz"
        }
      },
      "additionalProperties": false
    },
    "product_info": {
      "type": "object",
      "properties": {
        "product_name": {
          "type": "string"
        },
        "lastupdate": {
          "type": "string",
          "format": "date-time"
        },
        "param": {
          "type": "object"
        },
        "derived_from": {
          "type": "string",
          "format": "uri"
        },
        "product_level": {
          "type": "string"
        }
      },
      "required": [
        "product_name",
        "lastupdate"
      ],
      "additionalProperties": false
    },
    "fields": {
      "$comment": "Add your new fields here. Don't require them here, do that above in the corresponding schema.",
      "type": "object",
      "properties": {
        "pc4d:sensor": {
          "type": "string"
        },
        "pc4d:native_crs": {
          "type": "string"
        },
        "pc4d:datetime": {
          "type": "string",
          "format": "date-time"
        },
        "pc4d:tz": {
          "type": "string"
        },
        "pc4d:acquisition_mode": {
          "type": "string"
        },
        "pc4d:duration": {
          "type": "number",
          "minimum": 0
        },
        "pc4d:orientation": {
          "type": "string"
        },
        "pc4d:data_type": {
          "type": "string"
        },
        "pc4d:point_count": {
          "type": "integer",
          "minimum": 0
        },
        "pc4d:avg_point_density": {
          "type": "number",
          "minimum": 0
        },
        "pc4d:spatial_resolution": {
          "type": "number",
          "minimum": 0
        },
        "pc4d:measurement_error": {
          "type": "number"
        },
        "pc4d:global_transfo": {
          "$ref": "#/definitions/transform_matrix"
        },
        "pc4d:trafometa": {
          "$ref": "#/definitions/trafometa"
        },
        "pc4d:product_info": {
          "$ref": "#/definitions/product_info"
        }
      },
      "additionalProperties": false
    }
  }
}